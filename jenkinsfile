@Library('shared-lib') _

pipeline {
    agent {
        label 'ubuntu'
    }

    environment {
        DOCKER_IMAGE = "myapp"
        DOCKER_TAG = "${BUILD_NUMBER}"
        DOCKERHUB_CRED_ID = "dockerhub-creds"
    }
        stages {
        stage('Check Docker Access') {
            steps {
                script {
                    sh 'docker ps'
                    sh 'docker --version'
                }
            }
        }

        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Hager706/docker_agent.git'
            }
        }

        stage('Run Unit Tests') {
            steps {
                runUnitTests()
            }
        }

        stage('Build Application') {
            steps {
                buildApp()
            }
        }

        stage('Build Docker Image') {
            steps {
                buildImage("${DOCKER_IMAGE}", "${DOCKER_TAG}")
            }
        }

        stage('Push Docker Image') {
            steps {
                pushImage("${DOCKER_IMAGE}", "${DOCKER_TAG}", "${DOCKERHUB_CRED_ID}")
            }
        }

        stage('Remove Image Locally') {
            steps {
                removeImageLocally("${DOCKER_IMAGE}", "${DOCKER_TAG}")
            }
        }
    }

    post {
        success {
            echo "Pipeline executed successfully!"
        }
        failure {
            echo "Pipeline failed."
        }
    }
}